<?xml version="1.0" encoding="utf-8"?>
<LabelPopupView 
	xmlns="nl.bs10.bright.views.content.*" 
	xmlns:mx="http://www.adobe.com/2006/mxml" 
	width="300" 
	height="150" 
	title="Save as..." 
	layout="absolute">
	
	<mx:Label 
		text="Enter new label:" 
		x="10" 
		y="20"/>
	
	<mx:TextInput 
		y="19" 
		focusOut="updateLabel()"
		right="10"
		left="118" 
		id="label_txt"/>

	<mx:Button 
		label="Save" 
		right="10" 
		bottom="10" 
		id="save_btn" 
		click="save()"/>
	
	<mx:Button 
		label="Cancel" 
		right="71" 
		bottom="10" 
		click="cancel()"/>
	
</LabelPopupView>
